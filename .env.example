# Database
DATABASE_URL=postgres://pulsar:pulsar_dev_password@localhost:5432/pulsar?sslmode=disable

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=dev_jwt_secret_change_in_production_min_32_chars
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production_min_32_chars

# Server
SERVER_PORT=8080
ENV=development

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://pulsar.localhost

# Frontend
VITE_API_URL=http://pulsar.localhost/api

# ===========================================
# Email Configuration
# ===========================================
# Provider: "smtp" for development (Mailpit), "resend" for production
EMAIL_PROVIDER=smtp
EMAIL_ENABLED=true
EMAIL_FROM=noreply@pulsar.localhost
EMAIL_FROM_NAME=Pulsar

# SMTP Settings (for development with Mailpit)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@pulsar.localhost
SMTP_FROM_NAME=Pulsar
SMTP_ENABLED=true
SMTP_USE_TLS=false

# Resend Settings (for production - leave empty in development)
# Get your API key at https://resend.com
RESEND_API_KEY=

# ===========================================
# OpenTelemetry Configuration
# ===========================================
# Set to true to enable OpenTelemetry tracing, metrics, and logs
OTEL_ENABLED=false
OTEL_SERVICE_NAME=pulsar-backend
# OTLP endpoint (use otel-collector:4317 when running in docker)
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
# Protocol: "grpc" or "http"
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_ENVIRONMENT=development
